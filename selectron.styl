/*!****************************/
/*! Selectron Functional Styles - modify at your own risk */
/*!****************************/
.selectron
.selectron *
	-moz-box-sizing: border-box
	box-sizing: border-box
.selectron
	display: inline-block
	vertical-align:middle
	&__selected
		display: block
		position: relative
		white-space:nowrap
		overflow:hidden

		/*! offset top and bottom margin by total top & bottom border to fix inline text alignment */
		margin:-2px 0 2px
		&__inner
			overflow:hidden
	&__listWrapper
		position: relative
		
		/*! offset top by total .selectron__selected top & bottom border to fix inline text alignment */
		top: -2px
		width:100%
		z-index: 1000
		&::before
			position:absolute
			display:none
	&__list
		width: 100%
		position: absolute
		margin:0!important
		padding:0!important
	&__li
		display: block
		list-style:none
		&__inner
			display: block
			white-space:nowrap
			overflow:hidden

/*! IE8 Fixes */
.lt-ie9
	.selectron
		vertical-align: baseline
	

/*!**********************************/
/*! End Selectron Functional Styles */
/*!**********************************/

/*!************************************/
/*! Selectron Theme Styles - go nuts! */
/*!************************************/
.selectron
	cursor: pointer
	-webkit-touch-callout: none
	user-select: none
	height: 40px
	line-height: 40px
	color: #333
	text-decoration: none
	&__selected
		border:1px solid #e7e7e7
		border-radius: 5px
		background: #fff
		padding: 0 10px
		&:hover
		&:active
			/*! some styles */
		&__inner
			/*! some styles */
	
	&--focused .selectron__selected
		background:#f9f9f9
	&--shown .selectron__selected
	&--hiding .selectron__selected
		border-radius:5px 5px 0 0
		border-bottom: none
	&--shown .selectron__selected__inner
		/*! some styles */
	&--hiding .selectron__selected__inner
		/*! some styles */
	&--showing .selectron__selected__inner
		/*! some styles */
	&__listWrapper:before
		background:#fff
		border-left:1px solid #e7e7e7
		border-right:1px solid #e7e7e7
		height:5px
		top:-5px
		width:100%
	&--focused .selectron__listWrapper::before
		background:#f9f9f9
	&__list
		display: none
		background: #fff
		border-left:1px solid #e7e7e7
		border-right:1px solid #e7e7e7
		border-bottom:1px solid #e7e7e7
		border-bottom-right-radius: 5px
		border-bottom-left-radius: 5px
	&__li
		color: #000
		border-top: 1px dotted #e7e7e7
		padding: 0
		&:first-child
			border-top: 1px solid #e7e7e7
		&__inner
			padding: 10px 10px
		&:hover .selectron__li__inner
			background: #F9F9F9
		&--selected .selectron__li__inner
			background: #EEE

/*!****************************/
/*! End Selectron Theme Styles */
/*!****************************/

